<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DataGridSample"
        xmlns:pages="clr-namespace:DataGridSample.Pages"
        x:Class="DataGridSample.MainWindow"
        Title="ProDataGrid for Avalonia"
        Width="1000"
        Height="700"
        WindowStartupLocation="CenterScreen">

  <TabControl Margin="8">
    <TabItem Header="DataGrid">
      <local:BasicPage />
    </TabItem>
    <TabItem Header="Collection Changes">
      <pages:CollectionChangesPage />
    </TabItem>
    <TabItem Header="Selection Binding">
      <pages:SelectedItemsPage />
    </TabItem>
    <TabItem Header="Grouping">
      <local:GroupingPage />
    </TabItem>
    <TabItem Header="Editable">
      <local:EditablePage />
    </TabItem>
    <TabItem Header="Add/Delete Rows">
      <local:AddDeleteRowsPage />
    </TabItem>
    <TabItem Header="Variable Height Scrolling">
      <local:VariableHeightPage />
    </TabItem>
    <TabItem Header="Scroll Snap &amp; Details">
      <local:ScrollInteractionsPage />
    </TabItem>
    <TabItem Header="Large Variable Height">
      <local:LargeVariableHeightPage />
    </TabItem>
    <TabItem Header="Large Uniform Rows">
      <local:LargeUniformPage />
    </TabItem>
    <TabItem Header="Pixel Columns">
      <local:PixelColumnsPage />
    </TabItem>
    <TabItem Header="Frozen Columns">
      <local:FrozenColumnsPage />
    </TabItem>
    <TabItem Header="Auto Columns">
      <local:AutoColumnsPage />
    </TabItem>
    <TabItem Header="DataTable">
      <local:DataTablePage />
    </TabItem>
  </TabControl>

</Window>
