<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DataGridSample"
             xmlns:models="clr-namespace:DataGridSample.Models"
             x:Class="DataGridSample.PixelColumnsPage"
             x:DataType="local:PixelColumnsPage">
  <Grid RowDefinitions="Auto,*" Margin="0,0,0,4">
    <StackPanel Grid.Row="0" Orientation="Vertical" Spacing="4" Margin="0,0,0,8">
      <TextBlock Classes="h2" Text="Pixel-Based Column Widths" />
      <TextBlock TextWrapping="Wrap"
                 Text="All columns use fixed pixel widths to validate horizontal scrolling and layout. The wide column forces overflow so the horizontal scrollbar is visible."/>
    </StackPanel>

    <DataGrid Grid.Row="1"
              ItemsSource="{Binding Items}"
              UseLogicalScrollable="True"
              HorizontalScrollBarVisibility="Visible"
              HeadersVisibility="All"
              CanUserResizeColumns="True"
              CanUserReorderColumns="True"
              CanUserSortColumns="True"
              RowBackground="#08000000"
              GridLinesVisibility="Horizontal">
      <DataGrid.Columns>
        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" x:DataType="models:PixelItem" />
        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="180" x:DataType="models:PixelItem" />
        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="140" x:DataType="models:PixelItem" />
        <!-- Wide pixel column to force horizontal overflow -->
        <DataGridTextColumn Header="Description (Wide)" Binding="{Binding Description}" Width="900" x:DataType="models:PixelItem" />
        <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="240" x:DataType="models:PixelItem" />
      </DataGrid.Columns>

      <DataGrid.Styles>
        <Style Selector="DataGridRow">
          <Setter Property="Header" Value="{Binding $self.Index}"/>
        </Style>
      </DataGrid.Styles>
    </DataGrid>
  </Grid>
</UserControl>
